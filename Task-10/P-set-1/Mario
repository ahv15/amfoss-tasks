#include <cs50.h>
#include <stdio.h>

int main(void)
{
    int i,j,n;
    printf("Enter the number of rows required\n");
    scanf("%d", &n);
    for(i=1;i<=n;i++){
        for(j=1;j<=n-i;j++){
            printf(" ");
        }
        for(j=n-i+1;j<=n;j++){
            printf("#");
        }
        printf("\n");
        }
    return 0;
    }
